<h1>Your TO DO list</h1>
<ul> <% @tasks.each do |task|%>
  <li><%= link_to(task.name, task_path(task)) %> - <%= task.formatted_done %>
    <%=link_to("Edit task", edit_task_path(task))%>
    <%=link_to("Delete", destroy_task_path(task), method: :delete)%>
  </li>
  <%end%>
</ul>

<%=link_to("Create new task", new_task_path)%>
